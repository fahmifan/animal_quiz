<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunda.askara.askaraapps">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sunda.askara.askaraapps.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sunda.askara.askaraapps.AksaraActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName="com.sunda.askara.askaraapps.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sunda.askara.askaraapps.askaraapps.com.sunda.askara.askaraapps.AksaraActivity" />
        </activity>
        <activity
            android:name="com.sunda.askara.askaraapps.QuizActivity"
            android:label="Quiz Aksara"
            android:launchMode="singleTop"
            android:parentActivityName="com.sunda.askara.askaraapps.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sunda.askara.askaraapps.askaraapps.com.sunda.askara.askaraapps.QuizActivity" />
        </activity>
        <activity
            android:name="com.sunda.askara.askaraapps.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.sunda.askara.askaraapps.QuizActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sunda.askara.askaraapps.askaraapps.com.sunda.askara.askaraapps.QuizActivity" />
        </activity>
        <activity android:name="com.sunda.askara.askaraapps.AksaraKunoActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName="com.sunda.askara.askaraapps.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sunda.askara.askaraapps.askaraapps.com.sunda.askara.askaraapps.AksaraKunoActivity" />
        </activity>
        <activity android:name="com.sunda.askara.askaraapps.AksaraKunoViewPager"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName="com.sunda.askara.askaraapps.AksaraKunoActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sunda.askara.askaraapps.askaraapps.com.sunda.askara.askaraapps.AksaraKunoViewPager" />
        </activity>
    </application>

</manifest>